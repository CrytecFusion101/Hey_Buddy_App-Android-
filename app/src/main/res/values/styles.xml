<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textColor">@color/black_900</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/helvetica</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">@dimen/_50sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/drawable_purple_button</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/helvetica_bold</item>

    </style>

    <style name="EdittextStyle">
        <item name="android:textColor">@color/black_900</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:paddingLeft">@dimen/_8sdp</item>
        <item name="android:paddingRight">@dimen/_8sdp</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/helvetica</item>
    </style>
</resources>
